#!/bin/bash

# ---- error handling
set -o errexit;
set -o posix;
set -o pipefail;
set -o errtrace;
unexpected_error() {
    local errstat=$?
    echo "${g_prog:-$(basename $0)}: Error! Encountered unexpected error at 'line $(caller)', bailing out..." 1>&2
    exit $errstat;
}
trap unexpected_error ERR;

# Force the path to only what we need, saving off the original path
PATH_ORIG=$PATH;
PATH=/usr/bin:/bin
g_prog=$(basename "$0");
g_progdir=$(dirname "$0");
g_progdir_abs=$(dirname $(readlink -f "$0"));

# ---- globals

g_exe="${g_progdir_abs}/../../../../../private/thirdparty/gmap/gmap_2016-11-07/bin/fa_coords";

g_executor_exe="${g_progdir_abs}/../../../../../private/thirdparty/perl/perl_5.24.0/binwrap/perl";

# ---- main

PATH="/usr/bin:/bin" \
    exec "$g_executor_exe" "$g_exe"  ${1+"$@"}
